{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.js",
    "packages/**/*.ts",
    "test/**/*.ts",
    "types.d.ts"
  ]
}